<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white"
            android:theme="@style/Think">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/results"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/userImage"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/math"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:id="@+id/username"
            android:text="Zhakhangir"
            android:gravity="center_horizontal|center"
            android:fontFamily="@font/qbold"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Show results"
            android:id="@+id/showResult"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/qbold"
            android:paddingTop="10dp"
            android:clickable="true"
            android:background="@color/gray2"
            android:foreground="?android:selectableItemBackground"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quick"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Do you wanna save it?"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:clickable="true"
                android:id="@+id/onSave"
                android:foreground="?android:selectableItemBackground"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/green3"
                    android:fontFamily="@font/qbold"
                    android:textSize="17dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/endRightAnswer"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:padding="5dp"
                android:id="@+id/onCancel"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/cards"
                    android:fontFamily="@font/qbold"
                    android:textSize="17dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/round"
            android:text="Hi theere"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="35dp"
            android:fontFamily="@font/qbold"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/chechAnswers">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/correct"
            android:fontFamily="@font/qbold"
            android:text="Right"
            android:textSize="40dp"
            android:visibility="visible"
            android:textColor="@color/green2"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/testS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answer Counter:"
                        android:layout_margin="5dp"
                        android:textSize="17dp"
                        android:fontFamily="@font/quick"/>
                    <TextView
                        android:id="@+id/count1"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:layout_margin="5dp"
                        android:textSize="19dp"
                        android:fontFamily="@font/qbold"
                        android:gravity="right"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:background="@color/colorPrimary"></RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time:"
                        android:textSize="17dp"
                        android:fontFamily="@font/quick"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="19dp"
                        android:fontFamily="@font/qbold"
                        android:id="@+id/time"
                        android:text="10"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/questionTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:padding="10dp"
                                android:fontFamily="@font/qbold"
                                android:text="Question"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:padding="3dp"
                                    android:background="@color/colorPrimaryDark"></RelativeLayout>
                                <TextView
                                    android:id="@+id/code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/quick"
                                    android:padding="10dp"
                                    android:text="code"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <RadioGroup
                        android:id="@+id/radioGroups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Quick"
                        style="@style/Quick">

                        <RadioButton
                            android:id="@+id/challengeButton1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/quick"
                            android:padding="5dp"
                            android:textSize="16dp"
                            android:theme="@style/RadioButtonStyle"
                            android:visibility="gone" />

                        <RadioButton
                            android:id="@+id/challengeButton2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/quick"
                            android:padding="5dp"
                            android:textSize="16dp"
                            android:theme="@style/RadioButtonStyle"
                            android:visibility="gone" />

                        <RadioButton
                            android:id="@+id/challengeButton3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/quick"
                            android:padding="5dp"
                            android:textSize="16dp"
                            android:theme="@style/RadioButtonStyle"
                            android:visibility="gone" />

                        <RadioButton
                            android:id="@+id/challengeButton4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/quick"
                            android:padding="5dp"
                            android:textSize="16dp"
                            android:theme="@style/RadioButtonStyle"
                            android:visibility="gone" />
                    </RadioGroup>
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="5dp"
                        android:layout_gravity="right">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:id="@+id/checkIt"
                            android:clickable="true"
                            android:foreground="?android:selectableItemBackground">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_check"
                                android:layout_gravity="center_horizontal"/>
                            <TextView

                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@color/white"
                                android:fontFamily="@font/qbold"
                                android:text="Answer"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>