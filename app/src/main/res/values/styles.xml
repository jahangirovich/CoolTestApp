<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:fontFamily">@font/qbold</item>
    </style>

    <style name="Quick">
        <item name="android:fontFamily">@font/quick</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Thinking" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green2</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green2</item>
        <item name="android:textColorSecondary">@color/green2</item>
        <item name="colorControlNormal">#fff</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:fontFamily">@font/qbold</item>
    </style>

    <style name="Think" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">@color/gray2</item>
        <item name="android:fontFamily">@font/qbold</item>

    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="android:fontFamily">@font/qbold</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        ...
        <item name="android:textAppearance">@style/AutoCompleteTextViewTextAppearance</item>
    </style>
    <style name="AutoCompleteTextViewTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:fontFamily">@font/quick</item>
    </style>
    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bronze</item>
        <item name="colorPrimaryDark">@color/bronze</item>
        <item name="colorAccent">@color/bronze</item>
    </style>
    <style name="InputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="fontFamily">@font/quick</item>
    </style>
    <style name="InputLayout2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="fontFamily">@font/quick</item>
    </style>
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/quick</item>
    </style>
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quick</item>
    </style>
    <style name="Title2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quick</item>
    </style>
    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorSecondary">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>
    <style name="AppTheme.WhiteButton">
        <item name="colorButtonNormal">@color/white</item>
    </style>
    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:button">@color/colorPrimary</item>
    </style>
</resources>
