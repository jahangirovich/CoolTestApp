            </intent-filter>
        </activity>
        <activity android:name=".newActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".registrationPage"/>
        <activity android:name=".Profile"/>
        <activity android:name=".Test"/>
        <activity android:name=".CallPersons"/>
        <activity android:name=".PersonAdd"/>
        <activity android:name=".Challenge"/>
        <activity android:name=".ReceiveChallenge"/>
        <activity android:name=".TestAdd" android:theme="@style/Thinking"/>
